<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="cell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/layout_border</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="date">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center</item>
        <item name="android:tag">day</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="today" parent="date">
        <item name="android:textColor">#FF1B19</item>
    </style>

    <style name="weekend" parent="date">
        <item name="android:textColor">#B1ABAB</item>
    </style>

    <style name="scheduleMark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:tag">schedule</item>
        <item name="android:textColor">#D3CFCF</item>
        <item name="android:textSize">6sp</item>
    </style>

    <style name="scheduleList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/layout_border_textarea</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>